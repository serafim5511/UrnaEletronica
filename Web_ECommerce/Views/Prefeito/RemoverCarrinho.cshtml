@model Entities.Entities.Prefeito

@{
    ViewData["Title"] = "RemoverCarrinho";
}

<h1>Remover Candidato do Carrinho</h1>

<h3>Desejá realmente remover o Candidato : @Html.DisplayFor(model => model.Nome) ? </h3>
<div>
   
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        
    </dl>

    <form asp-action="RemoverCarrinho">
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="ListarCandidatosCarrinhoUsuario">Voltar para itens do carrinho</a>
    </form>
</div>

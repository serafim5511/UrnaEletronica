@model Entities.Entities.Prefeito

@{

}



<h4>Vender um Candidato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Id" type="hidden" />
            <input asp-for="UserId" type="hidden" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger">@ViewBag.existeNumero </span>
            </div>
        
            <div class="form-group">
                <label asp-for="Vice" class="control-label"></label>
                <input asp-for="Vice" class="form-control" />
                <span asp-validation-for="Vice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <p>Seleciona sua Imagem com tamanho maximo de 600X600</p>
                    <input type="file" name="Imagem" asp-for="Imagem" multiple />
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista de Prefeito</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
